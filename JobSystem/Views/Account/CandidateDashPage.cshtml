<div class="container-fluid py-4">
    <div class="row">
        <!-- Left Sidebar - Filters -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="mb-3">Filters</h5>
                    <form>
                        <!-- Job Type Filters -->
                        <div class="mb-3">
                            <label class="form-label">Job Type</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="fullTime">
                                    <label class="form-check-label" for="fullTime">Full-time</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="partTime">
                                    <label class="form-check-label" for="partTime">Part-time</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remote">
                                    <label class="form-check-label" for="remote">Remote</label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Search Bar -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="mb-3">Search Jobs</h5>
                    <form class="d-flex gap-2">
                        <input type="search" class="form-control" placeholder="Search jobs...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </form>
                </div>
            </div>

            <!-- Job Listings -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Job Listings</h5>
                    <!-- Dynamic job listings will go here -->
                    <div class="row g-4">
                        @foreach (var job in Model)
                        {
                            <div class="col-12">
                                <div class="card shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="card-title">@job.Title</h5>
                                                <h6 class="card-subtitle mb-2 text-muted">
                                                    @job.CompanyName • @job.Location
                                                </h6>
                                            </div>
                                            <div class="btn-group">
                                                <a asp-action="Apply" asp-route-id="@job.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Apply
                                                </a>
                                                <a asp-action="DetailsCan" asp-route-id="@job.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </div>
                                        </div>

                                        <div class="mb-2">
                                            <span class="badge bg-success me-2">@job.Type</span>
                                            <span class="badge bg-info">@job.Salary</span>
                                        </div>

                                        <p class="card-text">@job.Description</p>
                                        <small class="text-muted">Posted @job.PostedDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

