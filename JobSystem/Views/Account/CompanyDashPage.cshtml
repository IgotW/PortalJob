<div class="container-fluid py-4">
    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Active Jobs</h6>
                    <h2 class="mb-0">
                        @Model.Count()
                    </h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Total Applications</h6>
                    @* <h2 class="mb-0">@Model.Sum(j => j.Applications)</h2> *@
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Total Views</h6>
                    @* <h2 class="mb-0">@Model.Sum(j => j.Views)</h2> *@
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6 class="card-title">Pending Reviews</h6>
                    @* <h2 class="mb-0">@Model.Count(j => j.Status == "Pending")</h2> *@
                </div>
            </div>
        </div>
    </div>

    <!-- Job Listings -->
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Job Listings</h5>
                <a asp-action="CreateJob" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Post New Job
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-4">
                @foreach (var job in Model)
                {
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title">@job.Title</h5>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            @job.CompanyName • @job.Location
                                        </h6>
                                    </div>
                                    <div class="btn-group">
                                        <a asp-action="EditJob" asp-route-id="@job.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Details
                                        </a>
                                        <a asp-action="DeleteJob" asp-route-id="@job.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-eye"></i> Delete
                                        </a>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <span class="badge bg-success me-2">@job.Type</span>
                                    <span class="badge bg-info">@job.Salary</span>
                                </div>

                                <p class="card-text">@job.Description</p>
                                <small class="text-muted">Posted @job.PostedDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
